{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "lib": [
            "es6"
        ],
        "locale": "en",
        "strict": true,
        "newLine": "lf",
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "lib",
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}